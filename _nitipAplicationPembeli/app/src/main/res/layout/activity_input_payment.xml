<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.InputPaymentActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:background="@drawable/order_header"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical">

            </LinearLayout>
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:shadowColor="#F1F5F6"
                    android:shadowRadius="2"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:padding="3dp"
                    android:textColor="#040303"
                    android:layout_marginTop="5dp"
                    android:textSize="12dp"
                    android:textStyle="normal"
                    android:gravity="center"
                    android:drawablePadding="5dp"
                    android:text="Data  Jasa "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                </TextView>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/garis_tebal">


                </ImageView>


                <androidx.cardview.widget.CardView
                    app:cardMaxElevation="5dp"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="2dp">
                    <LinearLayout
                        android:background="#DEDFDE"
                        android:layout_margin="3dp"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:padding="5dp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_weight="1"
                                android:shadowColor="#F1F5F6"
                                android:shadowRadius="2"
                                android:shadowDx="1"
                                android:shadowDy="1"
                                android:textColor="#070707"
                                android:layout_marginTop="5dp"
                                android:textSize="12dp"
                                android:textStyle="bold"
                                android:gravity="left"
                                android:drawablePadding="5dp"
                                android:text="Asal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                >

                            </TextView>
                            <TextView
                                android:layout_weight="1"
                                android:shadowColor="#F1F5F6"
                                android:shadowRadius="2"
                                android:shadowDx="1"
                                android:shadowDy="1"
                                android:textColor="#070707"
                                android:layout_marginTop="5dp"
                                android:textSize="12dp"
                                android:textStyle="normal"
                                android:gravity="center"
                                android:drawablePadding="5dp"
                                android:text="ke"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                >

                            </TextView>
                            <TextView
                                android:layout_weight="1"
                                android:shadowColor="#F1F5F6"
                                android:shadowRadius="2"
                                android:shadowDx="1"
                                android:shadowDy="1"
                                android:textColor="#070707"
                                android:layout_marginTop="5dp"
                                android:textSize="12dp"
                                android:textStyle="bold"
                                android:gravity="left"
                                android:drawablePadding="5dp"
                                android:text="Tujuan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                >

                            </TextView>




                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:layout_marginBottom="10dp"
                                android:textColor="#100F0F"
                                android:layout_marginTop="5dp"
                                android:textSize="12dp"
                                android:textStyle="normal"
                                android:gravity="left"
                                android:drawablePadding="5dp"
                                android:text="Tanggal Berangkat"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                >

                            </TextView>
                            <TextView
                                android:layout_weight="1"
                                android:layout_marginBottom="10dp"
                                android:textColor="#100F0F"
                                android:layout_marginTop="5dp"
                                android:textSize="12dp"
                                android:textStyle="normal"
                                android:gravity="left"
                                android:drawablePadding="5dp"
                                android:text="Tanggal Tiba"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                >

                            </TextView>


                        </LinearLayout>
                        <ImageView
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/garis_tebal">


                        </ImageView>


                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:padding="5dp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_margin="3dp"
                                android:drawableLeft="@drawable/ic_baseline_perm_identity_24"
                                android:layout_weight="1"
                                android:layout_marginBottom="10dp"
                                android:textColor="#100F0F"
                                android:layout_marginTop="5dp"
                                android:textSize="12dp"
                                android:textStyle="normal"
                                android:gravity="center"
                                android:drawablePadding="5dp"
                                android:text="Nama Penjual"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                >

                            </TextView>
                            <TextView
                                android:layout_margin="3dp"
                                android:drawableLeft="@drawable/ic_baseline_monetization_on_24"
                                android:layout_weight="1"
                                android:layout_marginBottom="10dp"
                                android:textColor="#100F0F"
                                android:layout_marginTop="5dp"
                                android:textSize="12dp"
                                android:textStyle="normal"
                                android:gravity="center"
                                android:drawablePadding="5dp"
                                android:text="Harga Bagasi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                >

                            </TextView>
                            <TextView
                                android:layout_margin="3dp"
                                android:drawableLeft="@drawable/ic_baseline_approval_24"
                                android:layout_weight="1"
                                android:layout_marginBottom="10dp"
                                android:textColor="#100F0F"
                                android:layout_marginTop="5dp"
                                android:textSize="12dp"
                                android:textStyle="normal"
                                android:gravity="center"
                                android:drawablePadding="5dp"
                                android:text="Berat Bagasi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                >

                            </TextView>



                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView

                    android:shadowColor="#CADAB7"
                    android:shadowRadius="2"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:padding="3dp"
                    android:textColor="#040303"
                    android:layout_marginTop="10dp"
                    android:textSize="12dp"
                    android:textStyle="normal"
                    android:gravity="center"
                    android:drawablePadding="5dp"
                    android:text="Data Pembayaran"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                </TextView>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/garis_tebal">


                </ImageView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="2dp"
                    app:cardUseCompatPadding="true"
                    app:cardMaxElevation="2dp"
                    android:layout_margin="2dp">
                    <LinearLayout
                        android:background="#DEDFDE"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_margin="5dp"
                            android:layout_weight="2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >


                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_gravity="center"
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/profile_image"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_baseline_done_24"
                                app:civ_border_width="2dp"
                                app:civ_border_color="#009688"/>
                            <TextView
                                android:padding="5dp"
                                android:textColor="#151414"
                                android:textSize="12dp"
                                android:textStyle="normal"
                                android:gravity="center"
                                android:drawablePadding="5dp"
                                android:text="Order Diterima"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                >

                            </TextView>

                            <TextView
                                android:textColor="#151414"
                                android:textSize="10dp"
                                android:textStyle="normal"
                                android:gravity="center"
                                android:drawablePadding="5dp"
                                android:text="Total Harga"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                >

                            </TextView>

                            <TextView
                                android:textColor="#151414"
                                android:textSize="12dp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:drawablePadding="5dp"
                                android:text="Jumlah Uang"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                >

                            </TextView>






                        </LinearLayout>

                        <LinearLayout
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >



                            <TextView
                                android:padding="3dp"
                                android:textColor="#151414"
                                android:textSize="12dp"
                                android:textStyle="normal"
                                android:gravity="center"
                                android:drawablePadding="5dp"
                                android:text="Harap membayar ke"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                >

                            </TextView>

                            <ImageView
                                android:layout_marginBottom="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:src="@drawable/garis_tebal">


                            </ImageView>

                            <TextView
                                android:padding="5dp"
                                android:drawableLeft="@drawable/ic_baseline_perm_identity_24"
                                android:layout_marginBottom="10dp"
                                android:textColor="#151414"
                                android:textSize="12dp"
                                android:textStyle="normal"
                                android:gravity="left"
                                android:drawablePadding="5dp"
                                android:text="Nama Penerima"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                >

                            </TextView>
                            <TextView
                                android:padding="5dp"
                                android:drawableLeft="@drawable/ic_baseline_chevron_right_24"
                                android:layout_marginBottom="10dp"
                                android:textColor="#151414"
                                android:textSize="12dp"
                                android:textStyle="normal"
                                android:gravity="left"
                                android:drawablePadding="5dp"
                                android:text="No Rekening"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                >

                            </TextView>

                            <TextView
                                android:padding="5dp"
                                android:drawableLeft="@drawable/ic_baseline_other_houses_24"
                                android:layout_marginBottom="10dp"
                                android:textColor="#151414"
                                android:textSize="12dp"
                                android:textStyle="normal"
                                android:gravity="left"
                                android:drawablePadding="5dp"
                                android:text="Nama Bank"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                >

                            </TextView>







                        </LinearLayout>




                    </LinearLayout>



                </androidx.cardview.widget.CardView>



                <TextView

                    android:shadowColor="#CADAB7"
                    android:shadowRadius="2"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:padding="3dp"
                    android:textColor="#040303"
                    android:layout_marginTop="10dp"
                    android:textSize="12dp"
                    android:textStyle="normal"
                    android:gravity="center"
                    android:drawablePadding="5dp"
                    android:text="Input Data Pembayaran"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                </TextView>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/garis_tebal">


                </ImageView>


                <TextView
                    android:shadowColor="#F1F5F6"
                    android:shadowRadius="2"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:padding="3dp"
                    android:textColor="#040303"
                    android:layout_marginTop="5dp"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:drawablePadding="5dp"
                    android:text="Ditransfer Oleh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                </TextView>

                <EditText
                    android:padding="3dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp"
                    android:textSize="12dp"
                    android:textStyle="normal"
                    android:gravity="left"
                    android:drawablePadding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                </EditText>
                <TextView
                    android:shadowColor="#F1F5F6"
                    android:shadowRadius="2"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:padding="3dp"
                    android:textColor="#040303"
                    android:layout_marginTop="5dp"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:drawablePadding="5dp"
                    android:text="Uang Sejumlah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                </TextView>

                <EditText
                    android:padding="3dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp"
                    android:textSize="12dp"
                    android:textStyle="normal"
                    android:gravity="left"
                    android:drawablePadding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                </EditText>

                <TextView
                    android:shadowColor="#F1F5F6"
                    android:shadowRadius="2"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:padding="3dp"
                    android:textColor="#040303"
                    android:layout_marginTop="5dp"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:drawablePadding="5dp"
                    android:text="Bank Asal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                </TextView>

                <EditText
                    android:padding="3dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp"
                    android:textSize="12dp"
                    android:textStyle="normal"
                    android:gravity="left"
                    android:drawablePadding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                </EditText>

                <TextView
                    android:shadowColor="#F1F5F6"
                    android:shadowRadius="2"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:padding="3dp"
                    android:textColor="#040303"
                    android:layout_marginTop="5dp"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:drawablePadding="5dp"
                    android:text="Tanggal Uang Ditransfer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                </TextView>

                <EditText
                    android:padding="3dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp"
                    android:textSize="12dp"
                    android:textStyle="normal"
                    android:gravity="left"
                    android:drawablePadding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                </EditText>

                <TextView
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="15dp"
                    android:text="Konfirmasi Pembayaran"
                    android:gravity="center"
                    android:textColor="#0C0C0C"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#8BC34A">

                </TextView>





            </LinearLayout>



        </LinearLayout>
    </ScrollView>



</LinearLayout>