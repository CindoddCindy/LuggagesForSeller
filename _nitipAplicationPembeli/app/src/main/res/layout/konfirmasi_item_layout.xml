<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        app:cardUseCompatPadding="true"
        app:cardMaxElevation="2dp"
        android:layout_margin="2dp">
        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >


                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_gravity="center"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_baseline_done_24"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#009688"/>
                <TextView
                    android:padding="5dp"
                    android:textColor="#151414"
                    android:textSize="12dp"
                    android:textStyle="normal"
                    android:gravity="center"
                    android:drawablePadding="5dp"
                    android:text="Order Diterima"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                </TextView>


                <TextView
                    android:textColor="#151414"
                    android:textSize="10dp"
                    android:textStyle="normal"
                    android:gravity="center"
                    android:drawablePadding="5dp"
                    android:text="Waktu Pembayaran"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                </TextView>

                <TextView
                    android:id="@+id/tv_konf_rv_waktu_bayar"
                    android:textColor="#151414"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:drawablePadding="5dp"
                    android:text="00:00"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                </TextView>







            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >



                <TextView
                    android:padding="3dp"
                    android:textColor="#151414"
                    android:textSize="12dp"
                    android:textStyle="normal"
                    android:gravity="center"
                    android:drawablePadding="5dp"
                    android:text="Harap membayar ke"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                </TextView>

                <ImageView
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/garis_tebal">


                </ImageView>

                <TextView
                    android:id="@+id/tv_konf_rv_nama_akun_penerima"
                    android:padding="5dp"
                    android:drawableLeft="@drawable/ic_baseline_perm_identity_24"
                    android:layout_marginBottom="10dp"
                    android:textColor="#151414"
                    android:textSize="12dp"
                    android:textStyle="normal"
                    android:gravity="left"
                    android:drawablePadding="5dp"
                    android:text="Nama Penerima"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                </TextView>
                <TextView
                    android:id="@+id/tv_konf_rv_no_rek"
                    android:padding="5dp"
                    android:drawableLeft="@drawable/ic_baseline_chevron_right_24"
                    android:layout_marginBottom="10dp"
                    android:textColor="#151414"
                    android:textSize="12dp"
                    android:textStyle="normal"
                    android:gravity="left"
                    android:drawablePadding="5dp"
                    android:text="No Rekening"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                </TextView>

                <TextView
                    android:id="@+id/tv_konf_rv_nama_bank"
                    android:padding="5dp"
                    android:drawableLeft="@drawable/ic_baseline_other_houses_24"
                    android:layout_marginBottom="10dp"
                    android:textColor="#151414"
                    android:textSize="12dp"
                    android:textStyle="normal"
                    android:gravity="left"
                    android:drawablePadding="5dp"
                    android:text="Nama Bank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                </TextView>

                <TextView
                    android:id="@+id/tv_konf_rv_jumlah_uang"
                    android:padding="5dp"
                    android:drawableLeft="@drawable/ic_baseline_monetization_on_24"
                    android:layout_marginBottom="10dp"
                    android:textColor="#151414"
                    android:textSize="12dp"
                    android:textStyle="normal"
                    android:gravity="left"
                    android:drawablePadding="5dp"
                    android:text="Nama Bank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                </TextView>








            </LinearLayout>




        </LinearLayout>



    </androidx.cardview.widget.CardView>




</LinearLayout>